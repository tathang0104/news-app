{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "displayName": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "displayName"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "desc": {
      "type": "text"
    },
    "socialLink": {
      "type": "string"
    },
    "saveNews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::new.new"
    },
    "favouriteNews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::new.new"
    },
    "adminUser": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user",
      "private": true
    },
    "news": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::new.new",
      "mappedBy": "author"
    },
    "avatarUrl": {
      "type": "string",
      "required": true
    },
    "jobName": {
      "type": "string",
      "default": "Author Job"
    },
    "bgImage": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
